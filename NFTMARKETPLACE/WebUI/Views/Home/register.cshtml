    <!-- Custom Css -->
    <link rel="stylesheet" href="../../css/style.min.css" type="text/css" />

    <script src="~/Scripts/Views/Register.js"></script>


</head>

<body data-bs-spy="scroll" data-bs-target="#navbar-navlist" data-bs-offset="71">

    <!-- light-dark mode button -->
    <a href="javascript: void(0);" id="mode" class="mode-btn text-white rounded-end">
        <i class="uil uil-brightness mode-dark mx-auto"></i>
        <i class="uil uil-moon bx-spin mode-light"></i>
    </a>

    <!--Navbar Start-->
   
    <!-- Navbar End -->
    <!-- start section -->
    <section class="home section position-relative overflow-hidden" style="background-image: url(./../../Content/images/inner-image/login.png); background-repeat: no-repeat;">
        <!-- start container -->
        <div class="container">



            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-heading">
                        <h1 class="fw-bold">Register new account</h1>
                        <p class="fw-semibold">
                            By getting started, you acknowledge and agree to Terms of Use and Privacy Policy
                        </p>
                    </div>
                </div>
            </div>


            <div class="mt-4 ">

                <form class="info-box " id="frmUserCustomer">
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="profile-item">
                                <div class="avatar">
                                    <img src="../../Content/images/inner-image/img-1.png" alt="" class="img-fluid rounded-circle avatar-xl">
                                </div>
                                <p class=" mb-0 my-3 fw-bold">Profile Photo 📷</p>

                                <p class="mt-2">Your introduction and credits are two of the most important elements of your StarNow profile.🙌</p>
                                <button class="btn btn-dark shadow">Upload</button>
                            </div>


                            @Html.CtrlInput("txtName", "Text", "Name :", "Ej: Chinchilla", "name")

                            @Html.CtrlInput("txtSurename", "Text", "Surenames :", "Ej: Chinchilla", "sureName")

                            @Html.CtrlInput("txtCedula", "Text", "Identification :", "1-0920-0329", "cedula")

                            @Html.CtrlInput("txtNickname", "text", "Nickname :", "jos", "nickname")


                        </div>
                        <div class="col-lg-5">

                            <div class="profile-item" style="height: 255px; margin-right: 0 "></div>


                            @Html.CtrlInput("txtPhone", "number", "Phone :", "+506 8823-1920", "phone")

                            @Html.CtrlInput("txtEmail", "text", "Email :", "example@gmail.com", "email")

                            @Html.CtrlInput("txtPassword", "password", "Password: ", "*******", "password")


                            <div class="Name" style="display:none" id="OtpVal">
                                <div style="display: flex; flex-wrap: nowrap; align-items: flex-end; flex-direction: row; align-content: flex-start; justify-content: space-between;">
                                    <form id="frmOtp" style="margin-right:5px ">
                                        @Html.CtrlInput("frmOtp", "text", "Validation code :", "22442", "Otp")
                                    </form>

                                    @Html.CtrlButton("Register", "btnSubmitOpt", "Validate", onClickFunction: "ValidateOpt")
                                </div>
                            </div>


                        </div>
                    </div>
                </form>


                <hr class="my-4">

                <p class="text-muted">By using our services, you trust us with your data. We understand that this is a big responsibility and we do our best to protect your information and put you in control of it.</p>

                <div class="submit-button">
                    @Html.CtrlButton("Register", "btnSubmitUserContent", "Submit", onClickFunction: "CreateContentUser")
                </div>
            </div>
        </div>
        <!-- end container -->
    </section>


    <!-- start footer -->
    <section class="footer">
        <div class="container">
            <div class="top-footer">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="footer-info mt-4">
                            <!-- <img src="../../Content/images/inner-image/logo-dark.png" alt="" height="22"> -->
                            <a class="logo f-30 text-dark fw-bold" href="index.html">
                                <img src="../../Content/images/NETQUALITY.png" class="logo-dark" alt="" height="40">
                                <img src="../../Content/images/NETQUALITY.png" class="logo-light" alt="" height="40">
                            </a>
                            <p class="f-18 mt-2 text-muted">
                                Business opportunities Are Like <br> Buses, There's Always Another <br> One Coming...
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-5">
                        <div class="row">

                            <div class="col-lg-6">
                                <div class="mt-4">
                                    <h5 class="f-18 fw-bold">Policies</h5>
                                    <ul class="list-unstyled footer-link mt-3">
                                        <li><a href="">Security & Privacy</a></li>
                                        <li><a href="">Marketplace</a></li>
                                        <li><a href="">Term & Condition</a></li>
                                        <li><a href="">Collection</a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mt-4">
                                    <h5 class="f-18 fw-bold">Company</h5>
                                    <ul class="list-unstyled footer-link mt-3">
                                        <li><a href="index.html">Home</a></li>
                                        <li><a href="~/Views/Home/activity.html">Pages</a></li>
                                        <li><a href="blog.html">Blog</a></li>
                                        <li><a href="contact.html">Contact</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <div class="mt-4 pl-0 pl-lg-4">
                            <h5 class="f-18 fw-bold">Follow Us</h5>
                            <ul class="list-inline social-icons-list pt-3">
                                <li class="list-inline-item">
                                    <a href="#"><i class="mdi mdi-facebook"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#"><i class="mdi mdi-twitter"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#"><i class="mdi mdi-linkedin"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#"><i class="mdi mdi-google-plus"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>


            <hr>


        </div>
    </section>
    <!-- end footer -->
    <!--Bootstrap Js-->
    <script src="../../Scripts/bootstrap.bundle.min.js"></script>

    <!-- Slider Js -->
    <script src="../../Scripts/tiny-slider.js"></script>
    <script src="../../Scripts/swiper.min.js"></script>

    <!-- counter -->
    <script src="../../Scripts/counter.init.js"></script>

    <!-- App Js -->
    <script src="../../Scripts/app.js"></script>

</body>

</html>